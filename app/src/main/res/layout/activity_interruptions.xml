
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.bhavani.dhirain.dl.Interruptions"
    android:id="@+id/id_intr"
    android:background="#87CEEB">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Overs Played :"
        android:id="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Wickets Lost :"
        android:id="@+id/textView5"
        android:layout_marginTop="48dip"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Overs Lost :"
        android:id="@+id/textView6"
        android:layout_marginTop="42dip"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/button2"
        android:onClick="onButtonClick"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/oversPlayed"
        android:digits=".0123456789"
        android:inputType="numberDecimal"
        android:maxLength="4"
        android:width="50dip"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginLeft="78dip"
        android:layout_marginStart="78dip"
        android:background="#ffffffff"
        android:layout_above="@+id/textView5"
        android:layout_alignParentTop="true" />
        <!--android:onClick="cc"/>-->

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wicketsLost"
        android:digits="0123456789"
        android:maxLength="2"
        android:inputType="numberDecimal"
        android:width="50dip"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/oversPlayed"
        android:layout_alignStart="@+id/oversPlayed"
        android:background="#ffffffff"
        android:layout_alignTop="@+id/textView5" />
        <!--android:onClick="onClickwicketsLost"-->


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/oversLost"
        android:digits="0123456789."
        android:inputType="numberDecimal"
        android:width="50dip"
        android:maxLength="4"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignLeft="@+id/wicketsLost"
        android:layout_alignStart="@+id/wicketsLost"
        android:background="#ffffffff"
        android:layout_alignTop="@+id/textView6" />



</RelativeLayout>
